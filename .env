# 🥝 KiwiBot Pro Environment Variables
# Copy this to .env and fill in your values

# ═══════════════════════════════════════════════════════════════
# GATEWAY CONFIGURATION
# ═══════════════════════════════════════════════════════════════
GATEWAY_PORT=18789
GATEWAY_PASSWORD=your-secure-password-here

# ═══════════════════════════════════════════════════════════════
# WEB DASHBOARD
# ═══════════════════════════════════════════════════════════════
WEB_ENABLED=true
WEB_PORT=3000

# ═══════════════════════════════════════════════════════════════
# AI PROVIDER CONFIGURATION
# ═══════════════════════════════════════════════════════════════

# OpenAI (recommended: gpt-4o)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o

# Anthropic (alternative: claude-3-5-sonnet-20241022)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google Gemini (FREE tier available!)
# Get your key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=AIzaSyAVq7HZdjJWQTvrBH2pGwrsF-cbEnAumWU
GEMINI_MODEL=gemini-3-flash-preview

# Default AI Settings
AI_MODEL=gemini-3-flash-preview
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# ═══════════════════════════════════════════════════════════════
# CHANNEL CONFIGURATION
# ═══════════════════════════════════════════════════════════════

# Discord
DISCORD_ENABLED=false
DISCORD_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id

# Telegram
TELEGRAM_ENABLED=false
TELEGRAM_TOKEN=your-telegram-bot-token

# WhatsApp
WHATSAPP_ENABLED=false
# WhatsApp uses QR code authentication, no token needed

# ═══════════════════════════════════════════════════════════════
# SESSION CONFIGURATION
# ═══════════════════════════════════════════════════════════════
SESSION_MAX_HISTORY=50
SESSION_TTL=86400000
# SESSION_TTL is in milliseconds (86400000 = 24 hours)

# ═══════════════════════════════════════════════════════════════
# LOGGING
# ═══════════════════════════════════════════════════════════════
LOG_LEVEL=info
# Options: debug, info, warn, error
